<p id="notice"><%= notice %></p>

<h1>Friends</h1>
<%= render 'form' %>
<div class="row">
  <div class="col-lg-6">

<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends_data.each do |friend| %>
      <tr>
        <td><%= image_tag(friend.picture.url(:thumb)) %></td>
        <td><h4><%= friend.email%></h4></td>
       
         </tr>
    <% end %>
  </tbody>
</table>
</div>


  <div class="col-lg-2">

<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @Data.each do |friend| %>
      <tr>
        
         <td align="center"><h4> <%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?', class: "btn btn-danger" } %></h4></td>
     </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>


