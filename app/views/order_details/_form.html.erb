<%= form_for @order_detail,html: { multipart: true  } do |f| %>
<% if @order_detail.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@order_detail.errors.count, "error") %> prohibited
        this order detail from being saved:
      </h2>
      <ul>
        <% @order_detail.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
        <%= f.label :item %><br>
        <%= f.text_field :item, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :amount %><br>
        <%= f.number_field :amount, class: 'form-control',  :step => 1%>
    </div>
  
<%= f.hidden_field :user_id , value: user_id %>
<%= f.hidden_field :order_id , value: order_id %>
    <div class="form-group">
        <%= f.label :price %><br>
        <%= f.number_field :price, class: 'form-control',  :step => 0.25%>
    </div>

    <div class="form-group">
        <%= f.label :comment %><br>
        <%= f.text_field :comment, class: 'form-control' %>
    </div>   
    
  <div class="form-group">
    <%= f.submit "Add" , class: 'btn btn-primary' %>
  </div>
<% end %>