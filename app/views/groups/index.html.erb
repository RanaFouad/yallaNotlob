<p id="notice"><%= notice %></p>

<h1>Groups</h1>
<%= render 'form' %>
  
<div class="row">
  <div class="col-lg-6">
    <h2>Your Groups</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group_data| %>
      <tr>
        <td><h4><%= link_to group_data.group_name ,group_path(group_data.id) %></h4></td>
        <td><h4><%= link_to 'Delete',group_path(group_data.id), method: :delete, data: { confirm: 'Are you sure?' } %></h4></td>
        <td><h4><%= link_to 'Add',group_path(group_data.id) %></h4></td>


        
         </tr>
    <% end %>
  </tbody>
</table>
</div>
 


  
 


