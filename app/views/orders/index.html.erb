<div class="row">
	<div class="col-md-5">
		<h1>My Orders</h1>
		<%= link_to "Start new order" , new_order_path, :method => :get %>
		<br/>
		<div class="row" style="padding:5;margin:5;">
			<div style="  padding:5;margin:5;">
				<table class="table table-striped table-bordered table-condensed">
					<tr>
						<th>Order</th>
						<th>Resturants</th>
						<th>Invited</th>
						<th>Joined</th>
						<th>Status</th>
						<th>Actions</th>
					</tr>
					<% @all_orders.each do |order| %>	
					<tr id="row_<%= order.id %>">
						
						<td><%= order.order_title %></td>
						<td><%= order.from %></td>
						<td><%=  @inv[order.id].size %></td>
						<td><%=  @jo[order.id].size %></td>
						<td><%= order.status %></td>
						<td>
							<%= link_to 'view' , order %> |
							<% if ( order.status == 'waiting' ) %>
								<a href='/orders/updateStatus?id=<%= order.id %>&status=Finished ' >Finish</a> |
								<a href='/orders/updateStatus?id=<%= order.id %>&status=Cancled ' >Cancle</a>
							<% end %>
						</td>
					</tr>
					<% end %>
				</table>
				<% will_paginate @all_orders %>
				<div class='text-center'>
					<ul class="pagination">
						<% @count.times do |x| %>
							<% if ( @page == (x+1) ) %>
								<li class="active" ><a href="/orders?page= <%= x+1 %>"><%= x+1 %></a></li>
							<% else %>
								<li><a href="/orders?page= <%= x+1 %>"><%= x+1 %></a></li>
							<% end %>	
						<% end %>
						
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-2"></div>
	<div class="col-md-5">
		<h1>Join Orders</h1>
		<br/>
		<div class="row" style="padding:5;margin:5;">
			<div style="  padding:5;margin:5;">
				<table class="table table-striped table-bordered table-condensed">
					<tr>
						<th>Order</th>
						<th>Owner id</th>
						<th>Resturants</th>
						<th>Invited</th>
						<th>Joined</th>
						<th>Status</th>
						<th>Actions</th>
					</tr>
					<% @joinedOrdersp.each do |order| %>	
					<tr id="row_<%= order.id %>">
						
						<td><%= order.order_title %></td>
						<td><%= order.user_id %></td>
						<td><%= order.from %></td>
						<td><%=  @inv2[order.id].size %></td>
						<td><%=  @jo2[order.id].size %></td>
						<td><%= order.status %></td>
						<td>
							<%= link_to 'view' , order %> 
						</td>
					</tr>
					<% end %>
				</table>
				<% will_paginate @all_orders %>
				<div class='text-center'>
					<ul class="pagination">
						<% @count2.times do |x| %>
							<% if ( @page2 == (x+1) ) %>
								<li class="active" ><a href="/orders?page2= <%= x+1 %>"><%= x+1 %></a></li>
							<% else %>
								<li><a href="/orders?page2= <%= x+1 %>"><%= x+1 %></a></li>
							<% end %>	
						<% end %>
						
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
